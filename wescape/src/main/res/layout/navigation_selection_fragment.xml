<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightGreyBackground"
              android:orientation="vertical"
              tools:context="com.dii.ids.application.main.authentication.SelectionFragment">


    <include layout="@layout/navigation_standard_toolbar"/>

    <!-- Toolbar which replace Actionbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <android.support.v7.widget.CardView
            android:id="@+id/selection_static_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            card_view:cardUseCompatPadding="true">

            <ListView
                android:id="@+id/selection_static_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1dp"/>

        </android.support.v7.widget.CardView>

        <!-- Placeholder -->
        <android.support.v7.widget.CardView
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/navigation_search_field"/>

                <ListView
                    android:id="@+id/nodes_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="1dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>